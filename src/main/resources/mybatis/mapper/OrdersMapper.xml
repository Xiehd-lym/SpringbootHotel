	<update id="updateOrders" parameterType="Orders">
		<![CDATA[
			UPDATE orders
		]]>
		<set>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				real_name = #{real_name},
			]]>
			</if>
			<if test="user_mail!=null and user_mail!=''">
			<![CDATA[
				user_mail = #{user_mail},
			]]>
			</if>
			<if test="user_phone!=null and user_phone!=''">
			<![CDATA[
				user_phone = #{user_phone},
			]]>
			</if>
			<if test="address!=null and address!=''">
			<![CDATA[
				address = #{address},
			]]>
			</if>
			<if test="orders_flag!=0">
			<![CDATA[
				orders_flag = #{orders_flag}
			]]>
			</if>
		</set>
		<if test="orders_no!=null and orders_no!=''">
		<![CDATA[
			where orders_no = #{orders_no}
		]]>
		</if>
		<if test="orders_no==null or orders_no==''">
		<![CDATA[
			where orders_id = #{orders_id}
		]]>
		</if>
	</update>

	<select id="getOrders" parameterType="Orders" resultType="Orders">
		<![CDATA[
			SELECT * FROM orders
		]]>
		<where>
			<if test="orders_id!=0">
			<![CDATA[
				orders_id = #{orders_id}
			]]>
			</if>
			<if test="orders_no!=null and orders_no!=''">
			<![CDATA[
				and orders_no = #{orders_no}
			]]>
			</if>
		</where>
	</select>

