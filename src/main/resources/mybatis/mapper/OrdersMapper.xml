<mapper namespace="com.soft.demo.dao.IOrdersDao">

	<insert id="addOrders" parameterType="Orders">
		<![CDATA[
			insert into orders
				values(null,#{orders_no},#{orders_date},#{user_id},#{real_name},#{user_mail},#{user_phone},#{address},#{orders_money},#{orders_flag})
		]]>
	</insert>

	<delete id="delOrders" parameterType="int">
		<![CDATA[
			delete from orders where orders_id=#{orders_id}
		]]>
	</delete>

